<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1.0"
		android:background="@color/chart_gradient_end">
		
		<FrameLayout
			android:id="@+id/chartContainer"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:background="@drawable/chart_background">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:text="Toggle a key button below to see some charts."
				android:textColor="@color/chart_text" />
			<ViewSwitcher
				android:id="@+id/chartSwitcher"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/chart_background">
			</ViewSwitcher>
		</FrameLayout>
			
		<!-- The month selector -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<Button
				android:id="@+id/monthMinusButton"
				android:layout_width="48dip"
				android:layout_height="48dip"
				android:text="-" />
				
			<TextView
				android:id="@+id/monthName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:gravity="center"
				android:text="Month Name"
				android:textColor="@color/chart_text" />
				
			<Button
				android:id="@+id/monthPlusButton"
				android:layout_width="48dip"
				android:layout_height="48dip"
				android:text="+" />			
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="240dip"
		android:orientation="vertical">
	
		<!-- The tabs -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<view
				class="com.t2.vas.view.ToggledButton"
				android:id="@+id/keysTabButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:text="Groups" />
			
			<view
				class="com.t2.vas.view.ToggledButton"
				android:id="@+id/notesTabButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:text="Notes" />
		</LinearLayout>
		
		<!-- The tab content -->
		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.0">
			<ListView
				android:id="@+id/keysList"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:visibility="invisible" />
				
			<ListView
				android:id="@+id/notesList"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:visibility="invisible"
				android:fastScrollEnabled="true" />
		</FrameLayout>
	</LinearLayout>
	
</LinearLayout>