	   	<activity 
	    	android:name=".activity.editor.GroupListActivity" 
	    	android:label="@string/activity_group_list" 
	    	android:excludeFromRecents="true" 
	    	android:launchMode="singleTop">
	   	</activity>
	   	<activity 
	    	android:name=".activity.editor.GroupActivity" 
	    	android:label="@string/activity_group" 
	    	android:excludeFromRecents="true" 
	    	android:theme="@android:style/Theme.Dialog" android:launchMode="singleTop">
	   	</activity>
	   	<activity 
	    	android:name=".activity.editor.DeleteGroupActivity" 
