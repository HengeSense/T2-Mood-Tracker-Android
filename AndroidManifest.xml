	   	<activity 
	    	android:name=".activity.editor.ScaleListActivity" 
	    	android:label="@string/activity_scale_list" 
	    	android:excludeFromRecents="true" 
	    	android:launchMode="singleTask">
	   	</activity>
	   	<activity 
	    	android:name=".activity.editor.ScaleActivity" 
	    	android:label="@string/activity_scale" 
	    	android:excludeFromRecents="true" 
	    	android:theme="@android:style/Theme.Dialog" android:launchMode="singleTop">
	   	</activity>
	   	<activity 
	    	android:name=".activity.editor.DeleteScaleActivity" 
	    	android:label="@string/activity_delete_scale" 
	    	android:excludeFromRecents="true" 
	    	android:theme="@android:style/Theme.Dialog" android:launchMode="singleTop">
	   	</activity>
	   	
	   	
